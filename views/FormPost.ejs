            <!-- <h4 class="mb-3">Billing address</h4> -->
            <form action="/FormPost" method="post" class="needs-validation" enctype="multipart/form-data" novalidate>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="firstName">Loại hình</label>
                        <select name="sl1" class="custom-select d-block w-100" id="country" required>
                            <option value="">--Chọn loại hình--</option>
                            <option value="Tìm trọ">Tìm trọ</option>
                            <option value="Tìm người ở ghép">Tìm người ở ghép</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label for="lastName">Hình thức</label>
                        <select name="sl2" class="custom-select d-block w-100" id="country" required>
                            <option value="">--Chọn hình thức</option>
                            <option value="Phòng trọ">Phòng trọ</option>
                            <option value="Ký túc xá">Ký túc xá</option>
                            <option value="Chung cư mini">Chung cư Mini</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="username">Tiêu đề</label>
                    <div class="input-group">
                        <div class="input-group-prepend">

                        </div>
                    <input type="text" name="Tittle" class="form-control" id="username" placeholder="Tiêu đề đăng tin" required>

                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="email">Địa chỉ</label>
                    <input type="email" name="address" class="form-control" id="email" placeholder="Địa chỉ.....">
                </div>

                <div class="mb-3">
                    <label for="email">Số phòng</label>
                    <input type="email" name="room" class="form-control" id="email" placeholder="Số phòng cho thuê.....">
                </div>

                <div class="mb-3">
                    <label for="address">Diện tích</label>
                    <input type="text" name="area" class="form-control" id="address" placeholder="Diện tích của phòng" required>
                </div>

                <div class="mb-3">
                    <label for="address2">Giá tiền</label>
                    <input type="text" name="price" class="form-control" id="address2" placeholder="Nhập đúng giá trị tiền">
                </div>

                <div class="mb-3">
                    <label for="address2">Mô tả chi tiết</label>
                    <input type="text" name="information" class="form-control" id="address2" placeholder="Nội dung cần ít nhất 10 ký tự." style="height: 200px;">
                </div>

                <div class="row">
                    <div class="col-md-5 mb-3">
                    <label for="country">Trọ tự quản</label>
                    <select name="sl3" class="custom-select d-block w-100" id="country" aria-placeholder="--Chọn hình thức--" required>
                        <option value="">--Chọn hình thức--</option>
                        <option value="Có">Có</option>
                        <option value="Không">Không</option>
                    </select>
                </div>

                <div class="col-md-4 mb-3">
                    <label for="state">Giới tính ưu tiên</label>
                    <select name="sl4" class="custom-select d-block w-100" id="state" required>
                        <option value="">--Tất cả--</option>
                        <option value="Nam">Nam</option>
                        <option value="Nữ">Nữ</option>
                    </select>
                </div>

                </div>

                <hr class="mb-4">

                <h4 class="mb-3">Thông tin liên hệ</h4>
                <div class="row">
                    <div class="col-md-6 mb-3">
                    <label for="cc-name">Họ và tên</label>
                    <input type="text" name="Fname" class="form-control" id="cc-name" placeholder="" required>
                </div>

                <div class="col-md-6 mb-3">
                    <label for="cc-number">Số điện thoại</label>
                    <input type="tel" name="telephone" class="form-control" id="cc-number" placeholder="" required>
                </div>
            </div>
            <hr class="mb-4">
            <div class="mb-3">
                <label for="address2">Hình ảnh</label>
                <input name="tenFile" type="file" class="form-control" multiple style="height: 200px;">
            </div>
            <div class="row">

            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Thêm tin</button>
